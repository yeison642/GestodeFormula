<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txQuimica"
        android:layout_width="413dp"
        android:layout_height="44dp"
        android:background="@color/coloPanelFormula"
        android:gravity="center"
        android:textColor="@color/colorTexSeleccionCate"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/lvQuimica"
        android:layout_width="393dp"
        android:layout_height="383dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBackListView"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/txQuimica"
        tools:layout_editor_absoluteX="9dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>